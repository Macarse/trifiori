<?php if (isset($this->previous)): ?> 
        <a href="<?= $this->url() . "?consulta=" . $this->busqueda . "&page=" . $this->previous
            . "&sortby=" . $this->sortby . "&sort=" . $this->sorttype; ?>">
            &lt; <?= $this->language->_("Anterior") ?> </a> |
<?php else: ?> 
  <span class="disabled">&lt; <?= $this->language->_("Anterior") ?> </span> |
<?php endif; ?> 

<!-- Numbered page links -->
<?php foreach ($this->pagesInRange as $page): ?> 
  <?php if ($page != $this->current): ?>
    <a href="<?= $this->url() . "?consulta=" . $this->busqueda . "&page=" . $page
            . "&sortby=" . $this->sortby . "&sort=" . $this->sorttype; ?>">
            <?= $page; ?></a>
  <?php else: ?>
    <?= $page; ?> | 
  <?php endif; ?>
<?php endforeach; ?>

<!-- Next page link --> 
<?php if (isset($this->next)): ?> 
        <a href="<?= $this->url() . "?consulta=" . $this->busqueda . "&page=" . $this->next
                . "&sortby=" . $this->sortby . "&sort=" . $this->sorttype; ?>"> 
